(function () {
  showCustomAlert('<%== j resource.errors.full_messages.join(', ') %>', 'error');
  const row = document.querySelector('#<%= dom_id(resource, :table_form) %>');
  row.classList.remove('changed');
  row.classList.add('error');
  const button = row.querySelector('input[type=button]');
  button.disabled = false;
  button.value = '❗️';
})();
